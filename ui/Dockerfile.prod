
# Stage 1 - build process
FROM node:alpine as builder

WORKDIR /usr/create-dapp/ui

COPY package.json .

RUN npm install

COPY . .

RUN npm run build

# Stage 2 - prod env
FROM nginx:alpine

COPY --from=builder /usr/create-dapp/ui/build /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
